{
  "name": "luban",
  "version": "1.0.0",
  "description": "Luban - Game configuration solution",
  "scripts": {
    "build": "cd src && dotnet build Luban.sln",
    "build:release": "cd src && dotnet build Luban.sln -c Release",
    "test": "cd tests/Luban.IntegrationTests && dotnet test",
    "test:verbose": "cd tests/Luban.IntegrationTests && dotnet test --logger \"console;verbosity=detailed\"",
    "test:filter": "cd tests/Luban.IntegrationTests && dotnet test --filter",
    "test:watch": "cd tests/Luban.IntegrationTests && dotnet watch test",
    "build:test": "npm run build && npm run test",
    "format": "cd src && dotnet format --severity error -v n",
    "clean": "cd src && dotnet clean Luban.sln && cd ../tests/Luban.IntegrationTests && dotnet clean",
    "luau:install": "scripts/install-luau.bat",
    "luau:check": "luau-analyze tests/Luban.IntegrationTests/TestData/*/expected/lua/*.lua",
    "luau:check:strict": "luau-analyze --typechecking-mode=strict tests/Luban.IntegrationTests/TestData/*/expected/lua/*.lua"
  },
  "keywords": ["luban", "game", "configuration", "code-generation"],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.15.0"
}
